---
import type { Locale } from "@/types";
import { Image } from "astro:assets";
import svetlanaPhoto from "@/assets/images/Sveta.avif";

export interface Props {
  title: string;
  locale?: Locale;
  description?: string;
}

const { title, locale = "ru", description = "" } = Astro.props;

// Split description into lines for layout
const descriptionLines = description
  ? description.split("\n").filter((line) => line.trim())
  : [];
---

<div
  class="bg-background text-foreground rounded-3xl p-8 w-full h-full shadow-2xl border border-primary-foreground/20 flex flex-col"
>
  <!-- Photo and Title section -->
  <div class="mb-6 flex-grow">
    <div class="flex gap-4 items-start mb-4">
      <!-- Rounded Photo -->
      <div class="flex-shrink-0">
        <Image
          src={svetlanaPhoto}
          alt="Светлана Жукова"
          class="w-32 h-32 rounded-full object-cover shadow-lg ring-4 ring-primary/20"
          width={128}
          height={128}
        />
      </div>

      <!-- Title -->
      <div class="flex-1 min-w-0">
        <h2
          class="text-3xl lg:text-4xl font-bold text-foreground/80 leading-tight"
        >
          {title}
        </h2>
      </div>
    </div>

    <!-- Full Description (Below Photo and Title) -->
    {
      descriptionLines.map((line) => (
        <p class="text-foreground/90 text-base leading-relaxed mb-3">{line}</p>
      ))
    }
  </div>

  <!-- Chips -->
  <div class="flex flex-wrap gap-2">
    <span
      class="px-3 py-1 bg-primary/20 text-dark text-sm rounded-full border border-primary/40 font-medium hover:bg-primary/30 transition-colors"
      >Патентованный гид
    </span>
    <span
      class="px-3 py-1 bg-primary/20 text-dark text-sm rounded-full border border-primary/40 font-medium hover:bg-primary/30 transition-colors"
    >
      25 лет в туризме
    </span>
    <span
      class="px-3 py-1 bg-primary/20 text-dark text-sm rounded-full border border-primary/40 font-medium hover:bg-primary/30 transition-colors"
    >
      Авторские туры
    </span>
    <span
      class="px-3 py-1 bg-primary/20 text-dark text-sm rounded-full border border-primary/40 font-medium hover:bg-primary/30 transition-colors"
    >
      С 1992 в Италии
    </span>
    <span
      class="px-3 py-1 bg-primary/20 text-dark text-sm rounded-full border border-primary/40 font-medium hover:bg-primary/30 transition-colors"
    >
      Гид-переводчик
    </span>
    <span
      class="px-3 py-1 bg-primary/20 text-dark text-sm rounded-full border border-primary/40 font-medium hover:bg-primary/30 transition-colors"
    >
      Историк-практик
    </span>
  </div>
</div>
