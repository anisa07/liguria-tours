---
import type { Locale } from "@/types";
import { Image } from "astro:assets";
import svetlanaPhoto from "@/assets/images/Sveta.avif";
import SkillChips from "@/components/ui/SkillChips.astro";
import { Check } from "lucide-react";

export interface Props {
  title: string;
  locale?: Locale;
  description?: string;
  chips?: string[];
}

const { title, locale = "ru", description = "", chips = [] } = Astro.props;

// Split description into lines for layout
const descriptionLines = description
  ? description.split("\n").filter((line) => line.trim())
  : [];
---

<div
  class="bg-gradient-to-br from-background via-background to-primary/5 text-foreground rounded-3xl p-8 w-full h-full shadow-2xl border-2 border-primary/20 flex flex-col hover:shadow-3xl transition-all duration-300 hover:border-primary/40"
>
  <!-- Photo and Title section -->
  <div class="mb-6 flex-grow">
    <div class="flex flex-col md:flex-row gap-5 items-center mb-6">
      <!-- Rounded Photo with verified badge -->
      <div class="flex-shrink-0 relative">
        <Image
          src={svetlanaPhoto}
          alt="Светлана Жукова"
          class="w-36 h-36 rounded-full object-cover shadow-xl ring-4 ring-primary/30"
          width={144}
          height={144}
        />
        <div
          class="absolute -bottom-1 -right-1 w-10 h-10 bg-primary rounded-full flex items-center justify-center shadow-lg ring-2 ring-background"
        >
          <Check className="w-5 h-5 text-primary-foreground" />
        </div>
      </div>

      <!-- Title -->
      <div class="flex-1 min-w-0">
        <h2
          class="text-xl lg:text-2xl font-bold text-foreground leading-tight mb-3"
        >
          {title}
        </h2>

        <!-- Chips below title -->
        <SkillChips chips={chips} size="md" />
      </div>
    </div>

    <!-- Full Description (Below Photo and Title) -->
    <div class="space-y-3">
      {
        descriptionLines.map((line) => (
          <p class="text-foreground/80 text-lg leading-relaxed">{line}</p>
        ))
      }
    </div>
  </div>
</div>
