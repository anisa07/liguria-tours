---
import Card from "./Card.astro";
import { MapPin } from "lucide-react";

export interface LocationData {
  city: string;
  country: string;
  address: string;
  timezone: string;
  employees: number;
  type: string;
}

export interface Props {
  location: LocationData;
  animationDelay?: number;
  className?: string;
  href?: string;
  clickable?: boolean;
}

const {
  location,
  animationDelay = 0,
  className = "",
  href,
  clickable = false,
} = Astro.props;
---

<Card
  title={location.city}
  subtitle={location.country}
  badge={location.type}
  badgeVariant="primary"
  variant="default"
  padding="md"
  animationDelay={animationDelay}
  className={className}
  href={href}
  clickable={clickable}
>
  <div class="space-y-2 text-sm">
    <div class="flex items-center space-x-2">
      <!-- MapPin Icon -->
      <MapPin className="w-4 h-4 text-muted-foreground" />
      <span class="text-muted-foreground">{location.address}</span>
    </div>
    <div class="flex justify-between">
      <span class="text-muted-foreground">Timezone: {location.timezone}</span>
      <span class="text-muted-foreground">{location.employees} employees</span>
    </div>
  </div>
</Card>
